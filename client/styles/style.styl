    border: 1px solid #a1a1a1;
    border-radius: 10px;
    a {
        color: #3bb9ea;
        text-decoration: none;
        &:hover,&:visited,&:active {
            color: #35a8d6;
            text-decoration: underline;
        }
    }
    
    .highlight {
        color: #3bb9ea;
    }
    .supporting-names {
        font-size: 16px;
        font-weight: bold;
    }
    .start-time {
        font-size: 20px;
        font-weight: bold;
    }
    .venue-name {
        font-size: 16px;
    }
    .expand {
        margin-right: 10px;
        font-size: 30px;
        color: #a1a1a1;
        margin-top: -9px;
    }
    .btn-actions {
        position: absolute;
        bottom: 25px;
